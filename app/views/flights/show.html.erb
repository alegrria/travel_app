<p id="notice"><%= notice %></p>

<p>
  <strong>Departure:</strong>
  <%= @flight.departure %>
</p>

<p>
  <strong>Arrival:</strong>
  <%= @flight.arrival %>
</p>

<p>
  <strong>Departure time:</strong>
  <%= @flight.departure_time %>
</p>

<p>
  <strong>Arrival time:</strong>
  <%= @flight.arrival_time %>
</p>

<%= link_to 'Edit', edit_flight_path(@flight) %> |
<%= link_to 'Back', flights_path %>

<h3>Austauschschulers</h3>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Family Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @flight.austauschschulers.each do |austauschschuler| %>
      <tr>
        <td><%= austauschschuler.name %></td>
        <td><%= austauschschuler.family_name %></td>
        <td><%= link_to "Delete", austauschschuler, method: :destroy, data: { confirm: "Are you sure?" } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

